<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_turquoise">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/create_acc"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tx_signupas"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:fontFamily="@font/robotobold"
                android:text="Create an account"
                android:textColor="@color/white"
                android:textSize="34sp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/bg_round_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create_acc"
            android:background="@drawable/background_bluelayer">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:stretchColumns="0,1"
                android:layout_margin="5dp">

                <TableRow
                    android:id="@+id/table_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/etx_signin_email"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7997B9"
                        android:layout_marginStart="80dp"
                        android:hint="Email:abc@example.com"
                        android:inputType="text"
                        android:shadowColor="#ECE6E6" />

                    <ImageView
                        android:id="@+id/img_signinemail"
                        android:layout_width="1dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        app:srcCompat="@drawable/loginic" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/etx_signin_firstname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7997B9"
                        android:layout_marginStart="80dp"
                        android:hint="First Name"
                        android:inputType="text"
                        android:shadowColor="#ECE6E6" />

                    <ImageView
                        android:id="@+id/img_nameicon"
                        android:layout_width="1dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        app:srcCompat="@drawable/signupname" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/etx_signin_lastname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7997B9"
                        android:layout_marginStart="80dp"
                        android:hint="Last Name"
                        android:inputType="text"
                        android:shadowColor="#ECE6E6" />

                    <ImageView
                        android:id="@+id/img_lastnameicon"
                        android:layout_width="1dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        app:srcCompat="@drawable/signupname" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/etx_signup_password"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7997B9"
                        android:layout_marginStart="80dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:shadowColor="#ECE6E6" />

                    <ImageView
                        android:id="@+id/img_setpassword"
                        android:layout_width="1dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        app:srcCompat="@drawable/loginpassword" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/etx_signup_repassword"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#7997B9"
                        android:layout_marginStart="80dp"
                        android:hint="Re-enter Password"
                        android:inputType="textPassword"
                        android:shadowColor="#ECE6E6" />

                    <ImageView
                        android:id="@+id/img_setpassword2"
                        android:layout_width="1dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        app:srcCompat="@drawable/loginpassword" />
                </TableRow>


            </TableLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0"
                android:layout_marginTop="600dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btn_signup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240dp"
                        android:layout_marginEnd="240dp"
                        android:background="@drawable/button_background"
                        android:text="Sign up"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoregular"
                        android:text="Existing user?"
                        android:textAlignment="center"
                        android:textSize="18sp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="60dp">
                    <Button
                        android:id="@+id/btn_signin"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="240dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="240dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_background"
                        android:text="log in now"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </TableRow>
            </TableLayout>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>