<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioBook"
    android:background="@drawable/background_turquoise">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="180dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audible"
            android:fontFamily="@font/robotobold"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>


    </FrameLayout>





            <View
                android:id="@+id/bg_round_rec"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:layout_marginTop="108dp"
                android:background="@drawable/background_layerblue"
                android:foregroundGravity="bottom" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/note"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="340dp"
            android:background="@drawable/ic_baseline_note_add_24"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"

        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/audio_title"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="23dp"
                android:fontFamily="@font/robotobold"
                android:text="Enjoy."
                android:textColor="@color/text_color"
                android:textSize="24sp" />

        </FrameLayout>

            <ImageView
                android:id="@+id/musicimg"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/audiobook"
                android:layout_marginTop="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginTop="260dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerposition"
                android:text="00:00"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"/>

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/seekbar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/playerduration"
                android:text="00:00"
                android:textStyle="bold"
                android:textColor="@color/DarkBlue"/>
                    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="300dp"
                android:layout_marginStart="118dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btnrew"
                    android:src="@drawable/ic_baseline_fast_rewind_24"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btnplay"
                    android:src="@drawable/ic_play"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btnpause"
                    android:visibility="gone"
                    android:src="@drawable/ic_baseline_pause_circle_filled_24"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/btnff"
                    android:src="@drawable/ic_baseline_fast_forward_24"/>



            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="380dp">

            <Button
                android:id="@+id/moreau"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_background"
                android:text="Learn More"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/shuffleau"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/button_background"
                android:text="Shuffle"
                android:textColor="@color/white" />
        </LinearLayout>






    </RelativeLayout>




    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="44dp" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:menu="@menu/bottom_navigation">

    </com.google.android.material.bottomnavigation.BottomNavigationView>




</RelativeLayout>