<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavList"
    android:background="@drawable/background_turquoise">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favourite"
            android:fontFamily="@font/robotobold"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>



        <View
            android:id="@+id/bg_round_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="680dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/background_layerblue"
            android:foregroundGravity="bottom" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/favshelfbutton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="340dp"
                android:background="@drawable/ic_favourite"/>
        </FrameLayout>



            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fav_list"
                android:scrollbars="vertical"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="60dp"/>



    </RelativeLayout>


</FrameLayout>
