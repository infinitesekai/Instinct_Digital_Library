<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouritePage"
    android:background="@drawable/bg_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Favourite"
            android:fontFamily="@font/robotobold"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>



        <View
            android:id="@+id/bg_round_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="680dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/bg_round_rec"
            android:foregroundGravity="bottom" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/favlistbutton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="340dp"
                android:background="@drawable/ic_favlist"/>
        </FrameLayout>



            <GridView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/favbook_grid"
                android:columnWidth="90dp"
                android:numColumns="3"
                android:verticalSpacing="30dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:scrollbars="vertical"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="60dp"/>




        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="44dp" />


    </RelativeLayout>
</FrameLayout>